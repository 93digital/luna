{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@wordpress/eslint-plugin/recommended-with-formatting"
  ],
  "globals": {
    "jQuery": true,
    "google": true,
    "luna": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-console": "warn",
    "indent": ["error", 2],
    "space-in-parens": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "eol-last": 0
  }
}
