{
  "name": "luna-starter-theme",
  "version": "0.0.0",
  "description": "93Digital's development starter theme, the boilerplate for all our WordPress projects",
  "main": "build/index.js",
  "scripts": {
    "start": "chokidar \"**/*.scss\" -c \"npm run build\" --initial",
    "build": "run-s \"build:*\"",
    "build:scripts": "wp-scripts build js/index.js js/blocks/blocks.js",
    "build:style": "node-sass sass/style.scss style.css",
    "build:editor-style": "node-sass sass/style-editor.scss editor-style.css",
    "build:postcss": "postcss -r style.css && postcss -r editor-style.css",
    "watch": "run-p \"watch:*\"",
    "watch:scripts": "wp-scripts start js/index.js js/blocks/blocks.js",
    "watch:style": "chokidar \"**/*.scss\" -c \"npm run build:style && npm run build:editor-style\" --initial"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/93developers/luna-starter-theme.git"
  },
  "keywords": [
    "93digital",
    "starter",
    "theme",
    "boilerplate"
  ],
  "author": "93Devs",
  "license": "ISC",
  "homepage": "https://bitbucket.org/93developers/luna-starter-theme#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@wordpress/browserslist-config": "^2.2.2",
    "@wordpress/eslint-plugin": "^8.0.2",
    "@wordpress/scripts": "^13.0.2",
    "chokidar-cli": "^2.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.22.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "postcss-cli": "^7.1.2",
    "postcss-focus": "^5.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-pxtorem": "^5.1.1",
    "stylelint": "^13.9.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-wordpress": "^17.0.0",
    "stylelint-order": "^4.1.0",
    "stylint": "^2.0.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}
