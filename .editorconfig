# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,scss,css}]
indent_style = space
indent_size = 2
charset = utf-8

# 2 tab indentation
[*.php]
indent_style = tab
indent_size = 2
